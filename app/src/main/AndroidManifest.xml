<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.azamovhudstc.dictioronaryapp">
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.azamovhudstc.dictioronaryapp.app.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/dictionary"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dictionary"
        android:supportsRtl="true"
        android:theme="@style/Theme.DictioronaryApp"
        tools:targetApi="31">
        <activity
            android:name=".activity.AboutActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.UzbekEnglishActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.BookMarkActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.EnglishUzbekActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>